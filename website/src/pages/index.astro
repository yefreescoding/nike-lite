---
// Layout import
import DefaultLayout from '../layouts/DefaultLayout.astro';

// Componnet imports
import Header from '../components/Header.astro';
import SectionHero from '../components/SectionHero.astro';
import SectionFeatured from '../components/SectionFeatured.astro';
import SectionTrending from '../components/SectionTrending.astro';
import SectionShoes from '../components/SectionShoes';
import Footer from '../components/Footer.astro';
import SectionMember from '../components/SectionMember.astro';
---

<DefaultLayout title="NikeLite | Just Do It">
  <Header />
  <main>
    <SectionHero />
    <SectionTrending />
    <SectionFeatured />
    <SectionShoes client:only />
    <SectionMember />
  </main>
  <Footer />
</DefaultLayout>

<style>
  main {
    @apply relative;
    width: min(100%, 106em);
    margin: 0 auto;
  }
</style>
