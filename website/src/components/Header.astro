---
import Nav from './Nav.astro';
---

<>
  <header id="header" class="" data-fixed="false">
    <a
      href="/"
      aria-label="Home link"
      class="italic font-extrabold capitalize text-xl cursor-pointer hover:text-gray-600"
    >
      NikeLite
    </a>
    <Nav />
  </header>
  <p class="text-center theme-bg p-4 bg-gray-200">
    Shop all the arrivals
    <a class="underline block" href="https://www.nike.com/w/new-3n82y"
      >Shop now!</a
    >
  </p>
</>

<style>
  header {
    @apply relative flex items-center justify-between px-8;
    transition: all 300ms ease-in-out;
  }

  header.hide {
    transform: translateY(-100%);
  }

  header[data-fixed='true'] {
    position: fixed;
    z-index: 999999;
    inset: 0 0 auto 0;
    background-color: var(--theme-bg);
    transform: translateY(0);
    transition: all 300ms ease-in-out;
  }
</style>
