---
interface Props {
  name: string;
  image: string;
  alt: string;
  classes?: string;
}

const { name, image, alt, classes } = Astro.props;
---

<a href="/" class:list={['card ', classes]}>
  <article class="flex flex-col gap-4">
    <div class="overflow-hidden">
      <img
        class="w-full object-cover aspect-square transition-all hover:scale-105"
        src={image}
        alt={alt}
      />
    </div>
    <h3 class="text-xl font-medium">{name}</h3>
  </article>
</a>
