---
import { SEO } from 'astro-seo';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<SEO
  title={title}
  description="It is the nike website. But in a little and simple box."
  openGraph={{
    basic: {
      title: 'NikeLite || Jjust Do It',
      type: 'A type.',
      image: '',
    },
  }}
  twitter={{
    creator: '@yefreescoding',
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: 'icon', href: '/favicon.ico' }],
    // extending the default meta tags
    meta: [
      {
        name: 'twitter:image',
        content: '',
      },
      { name: 'twitter:title', content: 'Nike Lite' },
      { name: 'twitter:description', content: 'Agent' },
    ],
  }}
/>
