---
import CardLink from './CardLink.astro';
---

<section id="Trending" class="my-12">
  <h2 class="text-2xl font-bold mx-4 my-8">Trending</h2>
  <div
    class="w-full overflow-x-scroll grid gap-4 grid-flow-col auto-cols-[75%] lg:auto-cols-[30%] snap-mandatory"
  >
    <CardLink
      name="Memebers: find your dunk"
      image="/Images/cards/card-image-1.jpg"
      alt="Clothing"
      classes="snap-start"
    />
    <CardLink
      name="Men's training essentials"
      image="/Images/men-training.jpg"
      alt="Clothing"
      classes="snap-start"
    />
    <CardLink
      name="Nike style"
      image="/Images/style-nike.jpg"
      alt="Clothing"
      classes="snap-start"
    />
    <CardLink
      name="Jordan Essentials for kids"
      image="/Images/nike-kids.jpg"
      alt="Clothing"
      classes="snap-start"
    />
  </div>
</section>
